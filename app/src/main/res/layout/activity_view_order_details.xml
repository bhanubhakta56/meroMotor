<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCACA"
    tools:context=".ui.ViewOrderDetailsActivity"
    android:orientation="vertical">
    <!--    top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#1D95B3">
        <ImageView
            android:id="@+id/img_back"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="#BFD5BF"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:text="PRODUCT NAME"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="150dp"
                        android:layout_margin="5dp"
                        android:layout_height="170dp"
                        android:src="@drawable/image"/>
                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">
                            <TextView
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price: "/>
                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs.123/-"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">
                            <TextView
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Company: "/>
                            <TextView
                                android:id="@+id/tv_brand"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HONDA"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Quantity: "/>
                            <Button
                                android:id="@+id/btn_sub"
                                android:background="#8D9F8D"
                                android:layout_width="30dp"
                                android:visibility="gone"
                                android:text="-"
                                android:textSize="25sp"
                                android:layout_height="35dp"/>

                            <TextView
                                android:id="@+id/tv_qty"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone"
                                android:text="1"
                                android:gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_qty2"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="1"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <Button
                                android:id="@+id/btn_add"
                                android:background="#8D9F8D"
                                android:visibility="gone"
                                android:layout_width="30dp"
                                android:text="+"
                                android:textSize="25sp"
                                android:layout_height="35dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">
                            <TextView
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total: "/>
                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_weight="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rs.123/-"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp">
                            <Button
                                android:id="@+id/btn_add_to_cart"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:visibility="gone"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:background="#809FA3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ADD TO CART"/>

                            <Button
                                android:id="@+id/btn_buy"
                                android:layout_weight="2"
                                android:visibility="gone"
                                android:layout_margin="3dp"
                                android:textSize="18sp"
                                android:background="#8FCA4B"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY"/>
                            <Button
                                android:id="@+id/btn_cancel"
                                android:layout_weight="1"
                                android:layout_margin="3dp"
                                android:textSize="18sp"
                                android:textColor="#000"
                                android:background="#D35F56"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancel"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="Specification"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textColor="#1B1A1A"
                    android:textSize="15sp"
                    android:text="text text text text text text text text text text text text text text text text text text "
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Supplier"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textColor="#000"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/tv_supplier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="B&amp;B supplier"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="#0846A3"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email :"/>
                        <TextView
                            android:id="@+id/tv_supplier_email"
                            android:layout_weight="1"
                            android:textColor="#0846A3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bnb@gmail.com"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contact :"/>
                        <TextView
                            android:id="@+id/tv_supplier_contact"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9876545456"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                        <TextView
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Address :"/>
                        <TextView
                            android:id="@+id/tv_supplier_address"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Old Baneshor, Kathmamndu"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">
                        <TextView
                            android:layout_weight="2"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location :"/>
                        <TextView
                            android:id="@+id/tv_google_map"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:textColor="#0846A3"
                            android:layout_height="wrap_content"
                            android:text="View on google map"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>